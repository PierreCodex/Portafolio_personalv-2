---
import { education } from "../data/data.ts";
---
<div class="w-full">
	<header class="mb-8">
		<h2 class="text-3xl font-bold flex items-center gap-2">
			<span class="text-[--first-color]">🎓 Educacion</span>
			<span class="bg-clip-text text-transparent bg-gradient-to-r from-[--first-color] to-[--first-color-light]">Education</span>
		</h2>
	</header>

	<ol class="relative ml-4 border-l border-[--border-color] dark:border-[--border-color2] space-y-10">
		{education.map((e, i) => (
			<li class="group relative pl-6">
				<!-- Bullet -->
				<span class="absolute -left-[9px] top-1 w-4 h-4 rounded-full bg-[--body-color] dark:bg-[--body-color2] border-2 border-[--first-color] flex items-center justify-center shadow-md"></span>
				<!-- Glow ring -->
				<span class="absolute -left-[15px] top-0 w-8 h-8 rounded-full bg-[--first-color]/10 blur-sm opacity-0 group-hover:opacity-100 transition"></span>

				<div class="relative rounded-xl bg-white/6 dark:bg-white/[0.04] ring-1 ring-[--border-color] dark:ring-[--border-color2] backdrop-blur-md px-5 py-4 flex flex-col gap-2 hover:ring-[--first-color]/60 transition-colors">
					<div class="flex flex-wrap items-center justify-between gap-3">
						<h3 class="font-semibold text-[--title-color] dark:text-[--title-color2] flex items-center gap-2">
							<span class="inline-flex items-center justify-center w-6 h-6 rounded-md bg-[--first-color]/15 text-[--first-color] text-sm">🎓</span>
							{e.degree}
						</h3>
						<span class="text-xs font-medium px-2 py-1 rounded-md bg-black/5 dark:bg-white/10 text-[--text-color-light] dark:text-[--text-color2] tracking-wide">
							{e.start} – {e.end}
						</span>
					</div>
					<p class="text-sm text-[--text-color-light] dark:text-[--text-color] flex items-center gap-2">
						<span>🏛️</span>{e.institution}
					</p>
					<p class="text-xs text-[--text-color-light] dark:text-[--text-color2] flex items-center gap-1">
						<span>📍</span>{e.location}
					</p>
					{e.highlight && (
						<span class="mt-1 self-start text-[10px] font-semibold tracking-wide px-2 py-1 rounded-md bg-[--first-color]/15 text-[--first-color] ring-1 ring-[--first-color]/30">Principal</span>
					)}
				</div>
			</li>
		))}
	</ol>
</div>
